# Server Configuration
PORT=3000
NODE_ENV=production
HOST=0.0.0.0

# Storage Configuration
UPLOAD_DIR=./uploads
MAX_FILE_SIZE=104857600
# Max file size in bytes (default: 100MB = 100 * 1024 * 1024)

# Database Configuration
DB_PATH=./storage.db

# Upload Limits
MAX_FILES_PER_UPLOAD=10

# CORS Configuration (comma-separated origins, or * for all)
CORS_ORIGINS=*

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
# Rate limit window in milliseconds (default: 15 minutes)
RATE_LIMIT_MAX_REQUESTS=100
# Max requests per window per IP

# API Configuration
API_PREFIX=/api/v1
# Optional API prefix for versioning (leave empty for no prefix)

# Security
TRUST_PROXY=false
# Set to true if behind a reverse proxy (nginx, apache, etc.)

# Logging
LOG_LEVEL=info
# Options: error, warn, info, debug
